            <div class='listOfUsers'>
            </div>
          </div>
        </div>
        
    </div>
    <script>
      config = {};
      config.io = "{{{io}}}";
      config.name = "{{{name}}}";
      config.room = "{{{room}}}";
      config.color = "{{{color}}}";
    </script>
    <script src="/room.js"></script>
